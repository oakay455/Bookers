<h2>Editing Book</h2>
<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %>

<div class="new-book-text">
 <div class="new-book-box">
  <p>Title</p>
  <%= f.text_field :title %>
 </div>
<div class="new-book-text">
 <div class="new-book-box">
 <p>Body</p>
 <%= f.text_area :body %>
</div>
</div>
<div><%= f.submit 'Update Book' %></div>
<% end %>
</div>

<div class="edit-link">
 <%= link_to 'Show', book_path(@book.id) %>
 |
 <%= link_to 'Back', books_path %>
 </div>